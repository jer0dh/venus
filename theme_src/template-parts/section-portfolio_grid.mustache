<div id="portfolio_grid_{{id}}" data-collapsed="true" style="height:0;" class="row portfolio-grid-screenshots-container">
    {{#acf}}
        {{# screenshots }}
            <div class="col-md-3 screenshot">
                <noscript>
                    <img src="{{& sizes.medium }}" alt="{{ alt }}"/>
                </noscript>
                <img src="{{& sizes.medium }}"
                     srcset="{{& sizes.medium }} 300w,
                            {{& sizes.large }} 768w,
                            {{& url }} {{ width }}w"
                     sizes="(min-width: 768px) 33vw, 100vw"
                     alt="{{ alt }}" />
            </div>
        {{/screenshots}}
    {{/acf}}
</div>
